{
  "name": "theme",
  "version": "3.8.0",
  "description": "",
  "scripts": {
    "start": "concurrently \"npm run tailwind:dev\" \"npm run esbuild:dev\"",
    "build": "npm run clean && npm run tailwind:build && npm run esbuild:build",
    "clean": "rimraf ../static/css/dist ../static/scripts/app.js",
    "tailwind:dev": "cross-env NODE_ENV=development tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css -w",
    "tailwind:build": "cross-env NODE_ENV=production tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "esbuild:dev": "esbuild ./src/scripts/app.js --bundle --outfile=../static/scripts/app.js --watch",
    "esbuild:build": "esbuild ./src/scripts/app.js --bundle --outfile=../static/scripts/app.js --minify"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.22.0",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.14.1"
  }
}
